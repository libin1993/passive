<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/esm_name_list"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    app:contentView="@+id/ll_name_list_info"
    app:rightMenuView="@+id/ll_edit_name_list">


    <LinearLayout
        android:id="@+id/ll_name_list_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_target_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="5"/>
        <TextView
            android:id="@+id/tv_target_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="11"/>
        <TextView
            android:id="@+id/tv_phone_vendor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_target_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="6"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_name_list"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_number"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/gray_cc"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/tv_delete_number"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/red_e38"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>

</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>