<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bound_gray_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="姓名"
                android:layout_gravity="center_vertical"
                android:paddingLeft="12dp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:singleLine="true"
                android:maxLength="8"
                android:paddingLeft="12dp"
                android:background="@drawable/bound_dark_gray_5dp"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bound_gray_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="号码"
                android:layout_centerVertical="true"
                android:paddingLeft="12dp"/>

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="100dp"
                android:singleLine="true"
                android:maxLength="11"
                android:paddingLeft="12dp"
                android:inputType="phone"
                android:digits="@string/number_rule"
                android:background="@drawable/bound_dark_gray_5dp"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bound_gray_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="LAC"
                android:layout_gravity="center_vertical"
                android:paddingLeft="12dp"/>

            <EditText
                android:id="@+id/et_phone_lac"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:singleLine="true"
                android:maxLength="11"
                android:paddingLeft="12dp"
                android:background="@drawable/bound_dark_gray_5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bound_gray_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="CID"
                android:layout_gravity="center_vertical"
                android:paddingLeft="12dp"/>
            <EditText
                android:id="@+id/et_phone_cid"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:singleLine="true"
                android:maxLength="11"
                android:paddingLeft="12dp"
                android:background="@drawable/bound_dark_gray_5dp"/>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bound_gray_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="制式"
                android:layout_centerVertical="true"
                android:paddingLeft="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:background="@drawable/bound_gray_10dp"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout_standard"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:tabIndicatorHeight="0dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                app:tabBackground="@drawable/tab_indicator"
                app:tabTextColor="@android:color/white" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bound_gray_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="频点"
                android:layout_centerVertical="true"
                android:paddingLeft="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:background="@drawable/bound_gray_10dp"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout_fcn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:tabIndicatorHeight="0dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                app:tabBackground="@drawable/tab_indicator"
                app:tabTextColor="@android:color/white" />

        </RelativeLayout>
        
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_location"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/bound_red_20dp"
        android:text="开始定位"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"/>

</RelativeLayout>