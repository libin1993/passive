<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/ivBack"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/detect_setting_title"
        android:textColor="@color/white"
        android:textSize="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="@+id/clDetectOptions"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/tvStateDetect"
        android:textColor="@color/white"
        android:text="@string/state_detect"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/clDetectOptions"
        app:layout_constraintTop_toBottomOf="@+id/tvStateDetect"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/locate_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/detect_wait_time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tvWaitTime"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/spWaitTime"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/locate_item_bg"
            android:entries="@array/induction_message_interval"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/tvWaitTime"
            app:layout_constraintBottom_toBottomOf="@+id/tvWaitTime"
            app:layout_constraintLeft_toRightOf="@+id/tvWaitTime"
            app:layout_constraintRight_toLeftOf="@+id/tvWaitTimeUnit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/millisecond"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvWaitTime"
            app:layout_constraintBottom_toBottomOf="@+id/tvWaitTime"
            android:id="@+id/tvWaitTimeUnit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:text="@string/detect_notify_phone_number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWaitTime"
            android:id="@+id/tvNotifyPhoneNumber"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/etPhoneNumber"
            android:inputType="phone"
            android:background="@color/locate_item_bg"
            android:entries="@array/induction_message_interval"
            android:gravity="left"
            app:layout_constraintTop_toTopOf="@+id/tvNotifyPhoneNumber"
            app:layout_constraintBottom_toBottomOf="@+id/tvNotifyPhoneNumber"
            app:layout_constraintLeft_toLeftOf="@+id/spWaitTime"
            app:layout_constraintRight_toRightOf="@+id/tvWaitTimeUnit"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:id="@+id/detectResultTitle"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:text="@string/detect_result"
        app:layout_constraintTop_toBottomOf="@+id/clDetectOptions"
        app:layout_constraintLeft_toLeftOf="@+id/tvStateDetect"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/bound_gray_10dp"
        app:layout_constraintTop_toBottomOf="@+id/detectResultTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tvDetectResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>
    <ToggleButton
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textOff="@string/start_detect"
        android:textOn="@string/stop_detect"
        android:background="@drawable/bound_red_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDetectResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>