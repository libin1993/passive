<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/locate_title"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_title_slice"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_white_30dp_corner_border"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_title_slice" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rivEnergyAnimatorBg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:src="@color/gray_2a2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rivEnergyBg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:src="@color/white"
        app:civ_border_color="@color/orange"
        app:civ_border_width="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber" />

    <TextView
        android:id="@+id/tvEnergyInfo"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/gray_2a2"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="@+id/rivEnergyBg"
        app:layout_constraintRight_toRightOf="@id/rivEnergyBg"
        app:layout_constraintTop_toTopOf="@id/rivEnergyBg" />

    <TextView
        android:id="@+id/tvEnergyInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/energy_info"
        android:textColor="@color/gray_2a2"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/rivEnergyBg"
        app:layout_constraintRight_toRightOf="@id/rivEnergyBg"
        app:layout_constraintTop_toBottomOf="@id/tvEnergyInfo" />

    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:id="@+id/rgLocateMode"
        android:background="@drawable/border_white_30dp_hollow_width2dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rivEnergyAnimatorBg">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:id="@+id/rbLowInputGain"
            android:background="@drawable/locate_mode_radio_bg"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/low_input_gain" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:id="@+id/rbMediumInputGain"
            android:background="@drawable/locate_mode_radio_bg"
            android:button="@null"
            android:gravity="center"
            android:text="@string/medium_input_gain"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:id="@+id/rbHighInputGain"
            android:background="@drawable/locate_mode_radio_bg"
            android:button="@null"
            android:gravity="center"
            android:text="@string/high_input_gain"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:id="@+id/rbSmart"
            android:background="@drawable/locate_mode_radio_bg"
            android:button="@null"
            android:gravity="center"
            android:text="@string/smart"
            android:layout_weight="1" />
    </RadioGroup>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rgLocateMode" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="近"
        app:layout_constraintLeft_toRightOf="@+id/chart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chart"
        android:id="@+id/tvClose"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="远"
        app:layout_constraintLeft_toRightOf="@+id/chart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/chart"
        android:id="@+id/tvDistant"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_trigger_status"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chart"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEnergyTrend"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:text="@string/energy_trend"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/rv_trigger_status"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvInductionHitCount"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14sp"
        android:text="命中0次"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/tvEnergyTrend"
        app:layout_constraintBottom_toBottomOf="@+id/tvEnergyTrend"
        android:layout_marginRight="30dp"/>
    <Button

        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/bound_red_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:id="@+id/bntStartInduction"
        android:textColor="@color/white"
        android:text="@string/start_induction"
        android:textSize="16sp"/>
</android.support.constraint.ConstraintLayout>